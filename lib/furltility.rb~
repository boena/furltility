module Furltility

  def self.included(base)
    base.extend ClassMethods
  end

  module ClassMethods
    def furltility(title_method = :title)

    end

    def to_param
      param = id.to_s
      if respond_to?(title_method) && title = send(title_method)
        temp = title.parameterize
        param << "-#{temp}" unless temp.blank?
      end
      param
    end
  end

end